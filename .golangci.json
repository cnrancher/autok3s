{
  "linters": {
    "enable": [
      "revive",
      "gofmt"
    ]
  },
  "run": {
    "timeout": "5m",
    "build-tags": [
      "netgo"
    ]
  },
  "linters-settings": {
    "misspell": {
      "ignore-words": [
        "mosquitto"
      ]
    },
    "revive": {
      "rules": [
        {
          "name": "var-naming",
          "disabled": true
        }
      ]
    }
  },
  "issues": {
    "max-same-issues": 20,
    "exclude-files": [
      "/zz_generated",
      "api\\.pb\\.go"
    ],
    "exclude-dirs": [
      "test",
      "scripts",
      "hack",
      "docs"
    ]
  }
}